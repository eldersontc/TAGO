@model List<TAGO_Presentacion.Models.CandidatoModel>

<nav class="navbar navbar-dark bg-primary navbar-expand-lg">
    <a class="navbar-brand" href="#menu-toggle" id="menu-toggle"><i class="fas fa-bars"></i> TAGO</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
            <span class="navbar-brand"><i class="fas fa-street-view"></i> @ViewBag.Origen</span>
            <span class="navbar-brand"><i class="fas fa-angle-double-right"></i></span>
            <span class="navbar-brand"><i class="fas fa-location-arrow"></i> @ViewBag.Destino</span>
        </div>
    </div>
</nav>
<br />
<div class="col-md-10">
    <table class="table table-sm table-bordered">
        <thead>
            <tr class="bg-primary" style="color: #fff;">
                <th colspan="3">Conductor</th>
                <th >Distancia</th>
                <th >Precio</th>
                <th class="text-center">Elegir</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var candidato in Model)
                {
                    <tr>
                        <td>
                            @*<img src="@Url.Content(String.Format("~/Images/{0}.png", candidato.Proveedor))" style="height: 10px; width: 10px;"/>*@
                        </td>
                        <td>
                            @candidato.Conductor
                        </td>
                        <td class="text-center">
                            <a href="@Url.Action("Pagar", new { proveedor = candidato.Proveedor, placa = candidato.PlacaVehiculo })" class="btn-light btn-sm">
                                <i class="far fa-id-card"></i>
                            </a>
                        </td>
                        <td ><i class="far fa-clock"></i> @candidato.Distancia Min.</td>
                        <td ><b>S/.</b> @candidato.Precio</td>
                        <td class="text-center">
                            <a href="@Url.Action("Pagar", new { proveedor = candidato.Proveedor, placa = candidato.PlacaVehiculo })" class="btn-light btn-sm">
                                <i class="fas fa-arrow-circle-right"></i>
                            </a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
